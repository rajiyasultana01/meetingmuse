# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/meetingmind
# Or use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/meetingmind

# Firebase Admin SDK Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# AI API Keys
OPENAI_API_KEY=sk-...
GROQ_API_KEY=gsk_...

# External API Secret (for external integrations)
API_SECRET_KEY=your-random-secret-key

# CORS Origin (frontend URL)
CORS_ORIGIN=http://localhost:8080

# File Upload Configuration
MAX_FILE_SIZE=104857600
UPLOAD_DIR=./uploads
